<div class="container">

  <div class="row">
    <div class="col-xs-12">
      <%= link_to like_recipe_path(@recipe), method: :put do %>
      Upvote
      <%= @recipe.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_recipe_path(@recipe), method: :put do %>
        Downvote
        <%= @recipe.get_downvotes.size %>
      <% end %>
      <div class="recipe-title text-center">
        <h1><%= @recipe.name %></h1>
      </div>
    </div>
  </div>

  <div class="recipe-head">
    <div class="row">
      <div class="col-xs-12">
        <div class="recipe-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @recipe.photo, crop: :fill %>')"></div>
      </div>
    </div>

    <div class="row">
      <div class="recipe-infos">
        <div>
          <h3>Difficulté:</h3>
          <p><%= @recipe.difficulty %></p>
        </div>
        <div>
          <h3>Temps de préparation:</h3>
          <p><%= @recipe.preparation_time %></p>
        </div>
        <div>
          <h3>Temps de cuisson: </h3>
          <p><%= @recipe.cooking_time %></p>
        </div>
        <div>
          <h3>Pour: </h3>
          <p><%= @recipe.servings %> pers.</p>
        </div>
      </div>
    </div>

    <div class="row">
      <% if  current_user.admin %>
        <div class="col-xs-12">
          <div class="dose-form form-inline text-center" id="dose-form-container">
            <%= render 'dose_form', recipe: @recipe, dose: @dose %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-4">
        <div class="recipe-ingredients lis-unstyled">
          <h2>Ingrédients</h2>
          <ul id="dose-list">
            <% @recipe.doses.each do |dose| %>
              <li><%= dose.description %> <%= dose.ingredient.name %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="col-xs-12 col-md-8">
        <div class="recipe-instructions">
          <h2>Préparation</h2>
          <p><%= @recipe.instructions %></p>
        </div>
      </div>
    </div>

  </div>
</div>






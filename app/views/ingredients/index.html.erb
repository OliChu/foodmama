
<div class="container">
  <div class="row">
    <div class="div-center">
      <% @ingredients.each do |ingredient| %>
        <div class="card">
          <div class="pic " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path ingredient.photo, crop: :fill %>')">
          </div>
          <div class="card-name"><%= ingredient.name %></div>
          <div class="card-edit">
            <%= link_to edit_ingredient_path(ingredient) do %>
              <i class="fa fa-pencil fa-fw"></i>
            <% end %>
          </div>
          <div class="card-delete">
            <%= link_to ingredient_path(ingredient), method: :delete do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </div>
          <%= link_to "", ingredient_path(ingredient), class: "absolute-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
